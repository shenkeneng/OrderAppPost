<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:background="@color/divider_color"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_showcase_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:id="@+id/view_showcase"
                android:layout_width="8dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:background="@color/frxs_red"></View>

            <TextView
                android:id="@+id/tv_promotion_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="粮油买赠活动开始啦!"
                android:textColor="@color/frxs_black_dark"
                android:textSize="16sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/tv_promotion_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="15sp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@mipmap/icon_promotion_time"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="2016.09.09-2016.10.01"
                android:textColor="@color/frxs_black_light" />


            <TextView
                android:id="@+id/tv_promotion_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="15sp"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/icon_promotion_more"
                android:gravity="center"
                android:text="查看详情"
                android:textColor="@color/frxs_black_light" />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.ewu.core.widget.WidthEquelsHeightImageView
            android:id="@+id/img_promotion_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.ewu.core.widget.WidthEquelsHeightImageView
            android:id="@+id/img_promotion_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.ewu.core.widget.WidthEquelsHeightImageView
            android:id="@+id/img_promotion_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>