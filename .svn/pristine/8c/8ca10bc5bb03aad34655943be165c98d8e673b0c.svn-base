public class ColumnSwitchSet implements Serializable {

    private int IsDisplayPreSale; //预售1显示0不显示

    private int IsDisplayCircle; //商圈1显示0不显示

    private int IsDisplayPoint; //积分1显示0不显示

    private int IsDisplayBuyBack; //退货管理1显示0不显示

    public int getIsDisplayPreSale() {
        return IsDisplayPreSale;
    }

    public void setIsDisplayPreSale(int isDisplayPreSale) {
        IsDisplayPreSale = isDisplayPreSale;
    }

    public int getIsDisplayCircle() {
        return IsDisplayCircle;
    }

    public void setIsDisplayCircle(int isDisplayCircle) {
        IsDisplayCircle = isDisplayCircle;
    }

    public int getIsDisplayPoint() {
        return IsDisplayPoint;
    }

    public void setIsDisplayPoint(int isDisplayPoint) {
        IsDisplayPoint = isDisplayPoint;
    }

    public int getIsDisplayBuyBack() {
        return IsDisplayBuyBack;
    }

    public void setIsDisplayBuyBack(int isDisplayBuyBack) {
        IsDisplayBuyBack = isDisplayBuyBack;
    }

    public boolean isDisplayPreScale() {
        if (1 == IsDisplayPreSale) {
            return true;
        } else {
            return false;
        }
    }

    public boolean isDisplayCircle() {
        if (1 == IsDisplayCircle) {
            return true;
        } else {
            return false;
        }
    }

    public boolean isDisplayPoint() {
        if (1 == IsDisplayPoint) {
            return true;
        } else {
            return false;
        }
    }

    public boolean isDisplayBuyBack() {
        if (1 == IsDisplayBuyBack) {
            return true;
        } else {
            return false;
        }
    }
}
