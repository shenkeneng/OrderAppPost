<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/common_margin"
    android:background="@drawable/shape_circle_rectangle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:paddingBottom="@dimen/common_margin">

        <TextView
            android:id="@+id/tv_point_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="2017/03/13  11:34:34"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/tv_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/red"
            android:textSize="@dimen/size_goods_desc"
            android:text="10685"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text=" 积分"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:paddingBottom="@dimen/common_margin">

        <TextView
            android:id="@+id/tv_point_deadline"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="积分有效期到:2017/03/13  11:34"
            android:textSize="@dimen/size_goods_desc"
            android:textColor="@color/frxs_black_dark"/>

        <TextView
            android:id="@+id/tv_point_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="已结算"
            android:textColor="@color/frxs_black_dark"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/tv_point_exchange"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="达到积分兑换1000-2000分标准"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/tv_point_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:gravity="right"
            android:text="已兑：300元"
            android:textColor="@color/red"/>
    </LinearLayout>
</LinearLayout>