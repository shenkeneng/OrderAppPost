<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.Toolbar
        style="@style/ActionBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_pay">

        <include layout="@layout/view_toolbar" />

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:drawableTop="@mipmap/pay_success_wx"
        android:gravity="center_horizontal"
        android:padding="@dimen/common_padding"
        android:text="支付成功！"
        android:drawablePadding="5dp"
        android:textColor="@color/green"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_shop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_margin"
            android:layout_weight="1"
            android:background="@drawable/shape_button_red"
            android:gravity="center"
            android:padding="@dimen/common_padding"
            android:text="继续购物"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/tv_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_margin"
            android:layout_weight="1"
            android:background="@drawable/shape_button_black"
            android:gravity="center"
            android:padding="@dimen/common_padding"
            android:text="查看帐单"
            android:textColor="@color/frxs_black_dark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin"
        android:padding="@dimen/common_padding"
        android:orientation="horizontal">
   
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/activity_warm_icon"
            android:layout_marginRight="3dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:text="@string/pay_warm"
            android:textSize="12sp"
            android:lineSpacingExtra="5dp"/>
    </LinearLayout>

</LinearLayout>