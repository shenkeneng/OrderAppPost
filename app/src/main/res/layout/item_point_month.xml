<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_circle_rectangle"
    android:orientation="vertical"
    android:padding="@dimen/common_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_goods"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginRight="@dimen/common_margin"
            android:layout_weight="1"
            android:background="@drawable/shape_button_black"
            android:padding="5dp"
            android:src="@mipmap/showcase_product_default" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/common_margin"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_goods_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="氧净1kg洗衣氧颗粒123"
                    android:textColor="@color/frxs_black_dark"
                    android:textSize="@dimen/size_goods_desc" />

                <TextView
                    android:id="@+id/tv_goods_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ 5.00"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/frxs_red"
                    android:textSize="@dimen/size_goods_desc" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_goods_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="000380"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/tv_goods_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="X 1"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:textColor="@color/frxs_black_dark"
                    android:textSize="@dimen/size_goods_desc" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="2017/3/10 14:53:53"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="订单：200000001819"
            android:textColor="@color/gray" />

    </LinearLayout>

</LinearLayout>