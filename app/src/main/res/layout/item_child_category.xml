<?xml version="1.0" encoding="utf-8"?>
<com.frxs.order.widget.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/categoryll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="left|center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:duplicateParentState="true"
        android:ellipsize="end"
        android:gravity="left|center"
        android:singleLine="true"
        android:text="哈哈"
        android:textColor="@color/selector_category"
        android:textSize="14sp" />

</com.frxs.order.widget.CheckableLinearLayout>